{
  "name": "@speira/e-commerce-skeleton",
  "version": "1.0.0",
  "private": true,
  "description": "Secure e-commerce application with AWS CDK infrastructure",
  "keywords": [
    "e-commerce",
    "aws",
    "cdk",
    "typescript",
    "graphql",
    "lambda",
    "serverless"
  ],
  "license": "ISC",
  "author": "Speira",
  "type": "module",
  "scripts": {
    "bootstrap": "nx run ecommerce-infrastructure:bootstrap",
    "build": "nx run-many --target=build --all",
    "build:infra": "nx run ecommerce-infrastructure:build",
    "build:lambda": "nx run ecommerce-infrastructure:build:lambda",
    "clean": "nx run-many --target=clean --all",
    "deploy": "nx run ecommerce-infrastructure:deploy",
    "deploy:full": "nx run ecommerce-infrastructure:deploy:full",
    "destroy": "nx run ecommerce-infrastructure:destroy",
    "diff": "nx run ecommerce-infrastructure:diff",
    "format": "prettier --write . --config prettier.config.mjs",
    "format:check": "prettier --check . --config prettier.config.mjs",
    "install:all": "pnpm install && nx run ecommerce-infrastructure:install:lambda",
    "lint": "nx run-many --target=lint --all",
    "lint:fix": "nx run-many --target=lint:fix --all",
    "nx": "nx",
    "synth": "nx run ecommerce-infrastructure:synth",
    "test": "nx run-many --target=test --all",
    "type-check": "nx run-many --target=type-check --all"
  },
  "devDependencies": {
    "@nx/eslint": "^21.5.2",
    "@types/node": "^22.7.9",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "nx": "^21.5.2",
    "prettier": "^3.2.5",
    "prettier-plugin-jsdoc": "^1.3.3",
    "prettier-plugin-packagejson": "^2.5.19",
    "typescript": "~5.5.3"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
