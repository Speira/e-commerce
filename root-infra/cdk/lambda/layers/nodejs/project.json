{
  "name": "@speira/e-commerce-lambda-layers",
  "root": "root-infra/cdk/lambda/layers/nodejs",
  "sourceRoot": "root-infra/cdk/lambda/layers/nodejs/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      },
      "outputs": ["{workspaceRoot}/root-infra/cdk/lambda/layers/nodejs/dist"]
    },
    "build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc && pnpm prune --prod",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      },
      "outputs": ["{workspaceRoot}/root-infra/cdk/lambda/layers/nodejs/dist"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --watch",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --config ../../../../eslint.config.mjs",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    },
    "lint:fix": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --fix --config ../../../../eslint.config.mjs",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf dist",
        "cwd": "root-infra/cdk/lambda/layers/nodejs"
      }
    }
  },
  "tags": ["lambda", "layers", "shared"]
}
